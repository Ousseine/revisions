{% extends 'admin/admin.html.twig' %}

{% block admin_class %}{{ parent() }} index{% endblock %}

{% block admin %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.slug }}</td>
                <td>
                    <a href="{{ path('admin_post_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('admin_post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_post_new') }}">Create new</a>
{% endblock %}
